generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Deadline {
  id          Int      @id @default(autoincrement())
  module      String
  titre       String
  timestamp   DateTime
  type        String
  lieu        String
  prof        String
  description String?
  etendue     String // TP, TD, ou CM
  auteur      String // ID de l'utilisateur qui a créé la deadline
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  historique  Json // Will store the array of modifications as a single JSON object
}
